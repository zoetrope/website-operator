{
  "automerge": true,
  "extends": [
    "config:base",
    "github>aquaproj/aqua-renovate-config#1.5.1",
    ":semanticCommitTypeAll(chore)",
    ":timezone(Asia/Tokyo)",
    "schedule:weekly"
  ],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "automerge": false,
      "description": "Disable minor update automerge for Kubernetes packages",
      "matchPackagePatterns": [
        "kubernetes-sigs/controller-tools",
        "kubernetes/kubectl",
        "^k8s/.*",
        "^sig.k8s/.*"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "separateMinorPatch": true
    },
    {
      "description": "Disable major update for k8s.io/client-go",
      "enabled": false,
      "matchPackageNames": [
        "k8s.io/client-go"
      ],
      "matchUpdateTypes": [
        "major"
      ]
    },
    {
      "description": "Enable patch update for Kubernetes",
      "matchPackageNames": [
        "kindest/node"
      ],
      "separateMinorPatch": true
    },
    {
      "description": "Disable automatic major/minor update for Kubernetes",
      "enabled": false,
      "matchPackageNames": [
        "kindest/node"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ]
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "regexManagers": [
    {
      "datasourceTemplate": "docker",
      "depNameTemplate": "kindest/node",
      "fileMatch": [
        "^\\.github\\/workflows\\/.+\\.ya?ml$"
      ],
      "matchStrings": [
        "- (?<currentValue>.+?) # renovate: kindest\\/node"
      ]
    },
    {
      "datasourceTemplate": "docker",
      "depNameTemplate": "kindest/node",
      "fileMatch": [
        "^e2e\\/Makefile$"
      ],
      "matchStrings": [
        "KUBERNETES_VERSION := (?<currentValue>.*?) # renovate: kindest\\/node"
      ]
    },
    {
      "datasourceTemplate": "docker",
      "depNameTemplate": "kindest/node",
      "fileMatch": [
        "^cluster.yaml$"
      ],
      "matchStrings": [
        "kubernetesVersion: (?<currentValue>.*?) # renovate: kindest\\/node"
      ]
    }
  ]
}
